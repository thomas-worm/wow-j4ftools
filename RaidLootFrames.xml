<Ui xmlns="http://www.blizzard.com/wow/ui/"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.blizzard.com/wow/ui/ UI.xsd">
  <Script file="RaidLootFrames.lua"/>
  <Frame name="J4FTools_RaidLootBidFrameTemplate" virtual="true" parent="UIParent" toplevel="true" frameStrata="DIALOG" hidden="true" clampedToScreen="true" movable="true">
		<Size x="243" y="84"/>
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Backdrop
      bgFile="Interface\DialogFrame\UI-DialogBox-Gold-Background"
      edgeFile="Interface\DialogFrame\UI-DialogBox-Gold-Border"
      tile="true">
      <BackgroundInsets>
        <AbsInset left="11" right="12" top="12" bottom="11" />
      </BackgroundInsets>
      <TileSize>
        <AbsValue val="32" />
      </TileSize>
      <EdgeSize>
        <AbsValue val="32" />
      </EdgeSize>
    </Backdrop>
    <Layers>
      <Layer level="ARTWORK">
        <Texture name="$parentSlotTexture" file="Interface\Buttons\UI-EmptySlot">
          <Size>
            <AbsDimension x="64" y="64"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="3" y="-3"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
        <Texture name="$parentNameFrame" file="Interface\MerchantFrame\UI-Merchant-LabelSlots">
          <Size>
            <AbsDimension x="128" y="64"/>
          </Size>
          <Anchors>
            <Anchor point="LEFT" relativeTo="$parentSlotTexture" relativePoint="RIGHT">
              <Offset>
                <AbsDimension x="-9" y="-10"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
        <FontString parentKey="Name" name="$parentName" inherits="GameFontNormalSmall" text="Item Name" justifyH="LEFT">
          <Size>
            <AbsDimension x="90" y="30"/>
          </Size>
          <Anchors>
            <Anchor point="LEFT" relativeTo="$parentSlotTexture" relativePoint="RIGHT">
              <Offset>
                <AbsDimension x="-5" y="5"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
      <Layer level="OVERLAY">
        <Texture name="$parentDecoration" file="Interface\DialogFrame\UI-DialogBox-Gold-Dragon" hidden="true">
          <Size>
            <AbsDimension x="120" y="120"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="-30" y="15"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
        <Texture name="$parentCorner" file="Interface\DialogFrame\UI-DialogBox-Corner">
          <Size>
            <AbsDimension x="32" y="32"/>
          </Size>
          <Anchors>
            <Anchor point="TOPRIGHT">
              <Offset>
                <AbsDimension x="-6" y="-7"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Frames>
      <Button parentKey="IconFrame" enableMouse="true">
        <Size x="34" y="34"/>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentSlotTexture" x="15" y="-15"/>
        </Anchors>
        <Layers>
          <Layer level="ARTWORK">
            <Texture parentKey="Icon">
              <Size x="34" y="34"/>
              <Anchors>
                <Anchor point="TOPLEFT"/>
              </Anchors>
            </Texture>
          </Layer>
          <Layer level="OVERLAY">
            <FontString parentKey="Count" inherits="NumberFontNormal" justifyH="RIGHT" hidden="true">
              <Anchors>
                <Anchor point="BOTTOMRIGHT" x="-5" y="2"/>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
        <Scripts>
          <OnEnter function="J4FTools_RaidLootBidFrame_IconFrame_OnEnter" />
          <OnLeave function="J4FTools_RaidLootBidFrame_IconFrame_OnLeave" />
          <OnUpdate function="J4FTools_RaidLootBidFrame_IconFrame_OnUpdate" />
          <OnClick function="J4FTools_RaidLootBidFrame_IconFrame_OnClick" />
        </Scripts>
      </Button>
      <Button parentKey="NeedButton" inherits="LootRollButtonTemplate" id="1" tooltipText="Main">
        <Anchors>
          <Anchor point="TOPRIGHT" x="-37" y="-14"/>
        </Anchors>
        <Scripts>
          <OnClick function="J4FTools_RaidLootBidFrame_NeedButton_OnClick" />
          <OnEnter function="J4FTools_RaidLootBidFrame_NeedButton_OnEnter" />
          <OnLeave function="J4FTools_RaidLootBidFrame_NeedButton_OnLeave" />
        </Scripts>
        <NormalTexture file="Interface\Buttons\UI-GroupLoot-Dice-Up"/>
        <HighlightTexture file="Interface\Buttons\UI-GroupLoot-Dice-Highlight" alphaMode="ADD"/>
        <PushedTexture file="Interface\Buttons\UI-GroupLoot-Dice-Down"/>
      </Button>
      <Button parentKey="PassButton" inherits="UIPanelCloseButton" id="0" tooltipText="Pass">
        <Anchors>
          <Anchor point="TOPRIGHT" relativeTo="$parentCorner" relativePoint="TOPRIGHT" x="5" y="5"/>
        </Anchors>
        <Scripts>
          <OnClick function="J4FTools_RaidLootBidFrame_PassButton_OnClick" />
          <OnEnter function="J4FTools_RaidLootBidFrame_PassButton_OnEnter" />
          <OnLeave function="J4FTools_RaidLootBidFrame_PassButton_OnLeave" />
        </Scripts>
      </Button>
      <Button parentKey="GreedButton" inherits="LootRollButtonTemplate" id="2" tooltipText="Second">
        <Anchors>
          <Anchor point="TOP" relativeKey="$parent.NeedButton" relativePoint="BOTTOM" x="-2" y="2"/>
        </Anchors>
        <Scripts>
          <OnClick function="J4FTools_RaidLootBidFrame_GreedButton_OnClick" />
          <OnEnter function="J4FTools_RaidLootBidFrame_GreedButton_OnEnter" />
          <OnLeave function="J4FTools_RaidLootBidFrame_GreedButton_OnLeave" />
        </Scripts>
        <NormalTexture file="Interface\Buttons\UI-GroupLoot-Coin-Up"/>
        <HighlightTexture file="Interface\Buttons\UI-GroupLoot-Coin-Highlight" alphaMode="ADD"/>
        <PushedTexture file="Interface\Buttons\UI-GroupLoot-Coin-Down"/>
      </Button>
      <StatusBar parentKey="Timer" drawLayer="ARTWORK" minValue="0" maxValue="60000" defaultValue="0">
        <Size x="152" y="10"/>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentSlotTexture" relativePoint="BOTTOMLEFT" x="13" y="10"/>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND" textureSubLevel="-1">
            <Texture parentKey="Background" setAllPoints="true">
              <Color r="0" g="0" b="0"/>
            </Texture>
          </Layer>
          <Layer level="ARTWORK">
            <Texture file="Interface\PaperDollInfoFrame\UI-Character-Skills-BarBorder">
              <Size x="156" y="20"/>
              <Anchors>
                <Anchor point="TOP" x="0" y="5"/>
              </Anchors>
            </Texture>
          </Layer>
        </Layers>
        <Scripts>
					<OnLoad>
						self:GetStatusBarTexture():SetDrawLayer("BACKGROUND");
					</OnLoad>
          <OnUpdate>
            
          </OnUpdate>
        </Scripts>
        <BarTexture parentKey="Bar" file="Interface\PaperDollInfoFrame\UI-Character-Skills-Bar" />
        <BarColor r="1.0" g="1.0" b="0" />
      </StatusBar>
    </Frames>
    <Scripts>
      <OnLoad>
        
      </OnLoad>
      <OnShow function="J4FTools_RaidLootBidFrame_OnShow" />
      <OnEvent />
    </Scripts>
  </Frame>
  <frame name="J4FTools_RaidLootBidFrame" inherits="J4FTools_RaidLootBidFrameTemplate" />
</Ui>
